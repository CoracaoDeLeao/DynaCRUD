<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="rootPane" prefHeight="400" prefWidth="500" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller.Modal_Create_Record_Controller">
   <children>
      <ScrollPane fx:id="scrollPane">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0">
                     <bottom>
                        <Button mnemonicParsing="false" text="Criar registro" BorderPane.alignment="CENTER" onAction="#createRecord">
                           <BorderPane.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </BorderPane.margin></Button>
                     </bottom>
                     <top>
                        <Label alignment="CENTER" text="Crie o seu registro" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </BorderPane.margin></Label>
                     </top>
                  </BorderPane>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </children>
</AnchorPane>
